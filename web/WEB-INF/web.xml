<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_0.xsd"
         version="3.1">
    <display-name>Payments</display-name>

    <session-config>
        <session-timeout>15</session-timeout>
    </session-config>
    <servlet>
        <servlet-name>controller</servlet-name>
        <servlet-class>web.controller.MainController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>controller</servlet-name>
        <url-pattern>/page/*</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>encFilter</filter-name>
        <filter-class>web.filters.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>encFilter</filter-name>
        <url-pattern>/page/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>secFilter</filter-name>
        <filter-class>web.filters.SecurityFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>secFilter</filter-name>
        <url-pattern>/page/*</url-pattern>
    </filter-mapping>
    
    
    <listener>
        <listener-class>web.listener.ServletListener</listener-class>
    </listener>

    <welcome-file-list>
        <welcome-file>/WEB-INF/view/login.jsp</welcome-file>
    </welcome-file-list>
</web-app>